	year = {2018},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/1365-2664.13132},
	keywords = {threatened species, habitat protection, optimization, decision theory, monitoring, value of information, management strategy, multiple management units},
	pages = {2102--2113},
	file = {Full Text PDF:C\:\\Users\\HughesJo\\Zotero\\storage\\Z5W2M9EI\\Bennett et al. - 2018 - When to monitor and when to act Value of informat.pdf:application/pdf;Snapshot:C\:\\Users\\HughesJo\\Zotero\\storage\\QJJJLTIJ\\1365-2664.html:text/html},
