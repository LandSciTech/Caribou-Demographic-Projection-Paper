	year = {2014},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/1365-2656.12144},
	keywords = {resource selection functions, survival, habitat quality, Rangifer tarandus caribou, woodland caribou, wolves, species distribution models, ecological trap},
	pages = {343--352},
	file = {Full Text PDF:C\:\\Users\\HughesJo\\Zotero\\storage\\H5MFHGX6\\DeCesare et al. - 2014 - Linking habitat selection and predation risk to sp.pdf:application/pdf;Snapshot:C\:\\Users\\HughesJo\\Zotero\\storage\\J2XYITHM\\1365-2656.html:text/html},
