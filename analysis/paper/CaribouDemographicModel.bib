	author = {Zurell, Damaris and König, Christian and Malchow, Anne Kathleen and Kapitza, Simon and Bocedi, Greta and Travis, Justin and Fandos, Guillermo},
	month = apr,
	year = {2022},
	note = {Publisher: John Wiley \& Sons, Ltd},
	keywords = {biodiversity conservation, global change, adaptive management, cost optimisation, ecosystem restoration, predictive models},
