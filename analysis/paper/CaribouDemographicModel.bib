	author = {Lochhead, Kyle D. and Kleynhans, Elizabeth J. and Muhly, Tyler B.},
	year = {2022},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/jwmg.22149},
	keywords = {roads, Rangifer tarandus caribou, land use simulation models, landscape disturbance, matrix habitat, wildlife conservation},
	pages = {e22149},
	file = {Full Text PDF:C\:\\Users\\HughesJo\\Zotero\\storage\\B7HXFRG2\\Lochhead et al. - 2022 - Linking woodland caribou abundance to forestry dis.pdf:application/pdf;Snapshot:C\:\\Users\\HughesJo\\Zotero\\storage\\IDJF7JF5\\jwmg.html:text/html},
}

