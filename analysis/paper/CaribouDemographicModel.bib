	journal = {Ecological Applications},
	author = {Eacker, Daniel R. and Lukacs, Paul M. and Proffitt, Kelly M. and Hebblewhite, Mark},
	year = {2017},
	keywords = {survival, elk, ungulate, Bayesian state-space models, Cervus canadensis, fecundity, life-stage simulation analysis, recruitment, vital rates},
	pages = {1280--1293},
	file = {Full Text PDF:C\:\\Users\\HughesJo\\Zotero\\storage\\27UXMABF\\Eacker et al. - 2017 - Assessing the importance of demographic parameters.pdf:application/pdf;Snapshot:C\:\\Users\\HughesJo\\Zotero\\storage\\B385C9ZV\\Eacker et al. - 2017 - Assessing the importance of demographic parameters.html:text/html},
