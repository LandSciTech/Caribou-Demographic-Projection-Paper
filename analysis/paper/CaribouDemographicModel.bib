	year = {2016},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/jwmg.991},
	keywords = {survival, Rangifer tarandus, detection probability, bias, interval censoring, Kaplan–Meier, known fate, radio-telemetry},
	pages = {138--148},
	file = {Full Text PDF:C\:\\Users\\HughesJo\\Zotero\\storage\\JLDCU6LQ\\DeCesare et al. - 2016 - Evaluating sources of censoring and truncation in .pdf:application/pdf;Snapshot:C\:\\Users\\HughesJo\\Zotero\\storage\\WK2PBKDC\\jwmg.html:text/html},
