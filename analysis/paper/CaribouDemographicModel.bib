	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/ecs2.3443},
	keywords = {survival, caribou, endangered species, recruitment, vital rates, Bayesian, Rangifer, fecal DNA, integrated population model},
	pages = {e03443},
}

@article{mcfarlane_genetic_2018,
