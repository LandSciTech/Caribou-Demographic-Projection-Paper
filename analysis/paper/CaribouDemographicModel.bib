	keywords = {composition surveys, mortality risk, multiple imputation, Newfoundland, survival analysis, woodland caribou (Rangifer tarandus caribou)},
	pages = {8476--8505},
	file = {Full Text PDF:C\:\\Users\\HughesJo\\Zotero\\storage\\59TXJBD8\\Ellington et al. - 2020 - Divergent estimates of herd-wide caribou calf surv.pdf:application/pdf;Snapshot:C\:\\Users\\HughesJo\\Zotero\\storage\\XFK4D63E\\ece3.html:text/html},
